{
  "include": ["env.d.ts", "**/*.ts", "**/*.tsx", "postcss.config.cjs", "tailwind.config.js"],
  "compilerOptions": {
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["app/*"],
      "@components/*": ["app/routes/components/*"],
      "@ui/*": ["app/routes/components/ui/*"]
    },
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "target": "ES2022",
    "types": ["node"],
    "noUnusedLocals": true,
    "noUnusedParameters": true
  }
}

